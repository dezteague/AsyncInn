@model IEnumerable<AsyncInn.Models.Room>

@{
    ViewData["Title"] = "Title";
    Layout = "_Layout";
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Rooms" asp-action="Index" method="get">
    <p>
        Search by Name: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<p>Total Rooms: @Model.Count()</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Layout)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmenityCount)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Layout)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmenityCount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
